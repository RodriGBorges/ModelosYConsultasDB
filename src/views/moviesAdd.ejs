<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">

        <form action="/movies/create" method="POST">

            <label for="title">Title </label>
            <p><input type="text" name="title" id="" value="<%= locals.old && old.title ? old.title : null %>" required > </p>
            <% if (locals.errors && errors.title) { %>
            <small class="errors_validation"> <%= errors.title.msg  %> </small>
            <% } %>
            <br>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" value="<%= locals.old && old.rating ? old.rating : null %>" required > </p>
            <% if (locals.errors && errors.rating) { %>
                <small class="errors_validation"> <%= errors.rating.msg  %> </small>
                <% } %>
            <br>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" value="<%= locals.old && old.awards ? old.awards : null %>" required ></p>
            <% if (locals.errors && errors.awards) { %>
                <small class="errors_validation"> <%= errors.awards.msg  %> </small>
                <% } %>
            <br>
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" value="<%= locals.old && old.release_date ? old.release_date : null %>" required ></p>
            <% if (locals.errors && errors.release_date) { %>
                <small class="errors_validation"> <%= errors.release_date.msg  %> </small>
                <% } %>
            <br>
            <label for="length">Length </label>
            <p><input type="number" name="length" id="" value="<%= locals.old && old.length ? old.length : null %>" required ></p>
            <% if (locals.errors && errors.length) { %>
                <small class="errors_validation"> <%= errors.length.msg  %> </small>
                <% } %>
            <br>
            <p>
                <select name="genre_id" id="" required>
                    <option value="" disabled selected>- select genre - </option>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>"><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>
            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>

    </section>
    
</body>

</html>